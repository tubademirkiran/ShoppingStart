@model ShoppingStart.UI.Models.CategoryModel
@{
    ViewBag.Title = "StartShop";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>StartShop</h2>
@Html.HiddenFor(x => x.category.CategoryID)
<div class="row">
    <div class="col-lg-3">
        <h1 class="my-4">Shop Name</h1>
        <div class="list-group">
            @foreach (var item in Model.clist)
            {
                <a href="/Shop/StartProduct/@item.CategoryID" class="list-group-item active">@item.CategoryName</a>
            }
            
        </div>
    </div>
    <div class="col-lg-9">
        <div class="card mt-4">
            <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="">

            @foreach (var item in Model.plist)
            {
                <div class="card-body">
                    <h3 class="card-title">@item.ProductName</h3>
                    <h4>@item.UnitPrice</h4>
                    <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
                    4.0 stars
                </div>
            }
        </div>
    </div>
</div>
   
